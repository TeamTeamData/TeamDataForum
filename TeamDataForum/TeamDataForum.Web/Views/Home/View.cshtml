@using System.Linq
@using TeamDataForum.Web.Models.ViewModels.Forums
@model ForumFullViewModel

@{
    ViewBag.Title = "View forum: " + Model.Description;
    if (Model.User.IsRegistered)
    {
        Layout = "~/Views/Shared/_LayoutUser.cshtml";

        if (Model.User.Roles.Any(r => r == "Administrator"))
        {
            @Html.Partial("~/Views/Shared/MenuPartials/ForumAdminPanelPartial.cshtml", Model.Id);
        }

        @Html.Partial("~/Views/Shared/MenuPartials/CreateThreadPartial.cshtml", Model.Id);
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

@Html.DisplayForModel("Forums/ForumFullViewModel")