@using System.Linq;
@using TeamDataForum.Web.Models.ViewModels.Forums
@model ForumViewModel

@{
    ViewBag.Title = "Home";
    if (Model.User.IsRegistered)
    {
        Layout = "~/Views/Shared/_LayoutUser.cshtml";

        if (Model.User.Roles.Any(r => r == "Administrator"))
        {
            @Html.Partial("~/Views/Shared/MenuPartials/CreateForumPartial.cshtml")
        }
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }


}

@Html.DisplayForModel("Forums/ForumViewModel")