@using TeamDataForum.Web.Models.ViewModels.Posts
@model ThreadPostViewModel

@if (Model != null)
{
    var maxPostLength = 30;

    var postText = Model.Text.Length > maxPostLength ? Model.Text.Substring(0, maxPostLength) + "..." : Model.Text;

    <div>@Html.ActionLink(postText, "View", "Posts", new { Id = Model.Id }, null)</div>
    <div>@Html.DisplayFor(m => m.Author)</div>
    <div>@Model.Date</div>
}
