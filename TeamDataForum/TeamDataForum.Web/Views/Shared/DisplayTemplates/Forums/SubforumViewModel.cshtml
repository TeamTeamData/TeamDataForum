@using TeamDataForum.Web.Models.ViewModels.Forums
@model SubforumViewModel

<tr>
    <td>
        <div>@Html.ActionLink(Model.Title, "View", "", new { Id = Model.Id }, null)</div>
        <div>@Model.Description</div>
        <div>@Model.Date.ToString("dd.MM.yyyy")</div>
        <div>@Html.DisplayFor(m => m.Moderators)</div>
    </td>
    <td>@Html.DisplayFor(m => m.LatestPost, "Posts/ForumPostViewModel")</td>
    <td>@Model.Threads</td>
    <td>@Model.Posts</td>
</tr>