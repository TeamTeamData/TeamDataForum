@using TeamDataForum.Web.Models.ViewModels.Posts
@model PostFullViewModel

@{ 
    var isEdited = Model.ChangeDate != null;
    var changeDate = Model.ChangeDate != null ? ((DateTime)Model.ChangeDate).ToString("dd.MM.yyyy HH:mm") : string.Empty;
}

<div id="post_@Model.Id" class="post">
    <div class="post_number">@Html.Raw("#")@Model.Number</div>
    <div class="post_item post_user_data">
        <div>@Html.DisplayFor(m => m.Author, "Users/PostUserViewModel")</div>
        <div>@Model.Date.ToString("dd.MM.yyyy HH:mm")</div>
    </div>
    <div class="post_item post_user_post">
        <div>@Model.Text</div>
        @if (isEdited)
        {
            <div class="post_edit">Edited on: @changeDate</div>
            <div class="post_edit">Edited by: @Model.Changer</div>
        }
    </div>
</div>