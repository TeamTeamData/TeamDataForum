@using TeamDataForum.Web.Models.ViewModels.Posts
@model ThreadPostViewModel

@if (Model != null)
{
    var maxPostLength = 30;

    var postText = Model.Text.Length > maxPostLength ? Model.Text.Substring(0, maxPostLength) + "..." : Model.Text;

    <div>@Html.ActionLink(postText, "View", "Post", new { Id = Model.Id }, null)</div>
    <div>By @Html.DisplayFor(m => m.Author, "Users/UserViewModel")</div>
    <div>Created on @Model.Date.ToString("dd.MM.yyyy HH:mm")</div>
}