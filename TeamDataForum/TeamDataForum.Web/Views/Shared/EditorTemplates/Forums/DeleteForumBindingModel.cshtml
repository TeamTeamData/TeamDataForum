@using TeamDataForum.Web.Models.BindingModels.Forums
@model DeleteForumBindingModel

@using (Html.BeginForm("Delete", "Forum", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.DisplayFor(m => m.Title, new { htmlAttributes = new { @class = "form-control" } })
    </div>
   <div class="form-group">
       @Html.LabelFor(m => m.Description)
       @Html.DisplayFor(m => m.Description, new { htmlAttributes = new { @class = "form-control" } })
   </div>
    @Html.ValidationMessageFor(m => m.Id)
    @Html.AntiForgeryToken()
    <input class="btn btn-success" type="submit" value="Delete"/>
}