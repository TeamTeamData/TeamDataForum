@using TeamDataForum.Web.Models.BindingModels.Threads
@model DeleteThreadBindingModel

@using (Html.BeginForm("Delete", "Thread", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <div>Thread: @Model.Title</div>
    @Html.ValidationMessageFor(m => m.Id)
    @Html.AntiForgeryToken()
    <input class="btn btn-success" type="submit" value="Delete" />
}