@using TeamDataForum.Web.Models.BindingModels.Posts
@model EditPostBindingModel

@using (Html.BeginForm("Edit", "Post", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    @Html.EditorFor(m => m.Thread, "Threads/IdentifiableThreadBindingModel")
    @Html.ValidationMessageFor(m => m.Thread)
    @Html.LabelFor(m => m.Text)
    @Html.EditorFor(m => m.Text)
    @Html.ValidationMessageFor(m => m.Text)
    @Html.AntiForgeryToken()
    <input type="submit" value="Edit" />
}