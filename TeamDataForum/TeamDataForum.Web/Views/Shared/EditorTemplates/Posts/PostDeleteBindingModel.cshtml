@using TeamDataForum.Web.Models.BindingModels.Posts
@model PostDeleteBindingModel

@using (Html.BeginForm("Delete", "Post", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.EditorFor(m => m.Thread, "Threads/IdentifiableThreadBindingModel")
        @Html.ValidationMessageFor(m => m.Thread)
    </div>
    <div class="form-group">
        @Html.DisplayFor(m => m.Text)
        @Html.ValidationMessageFor(m => m.Id)
    </div>
    @Html.AntiForgeryToken()
    <input class="btn btn-success" type="submit" value="Delete" />
}