@using TeamDataForum.Web.Models.BindingModels.Users
@model PasswordBindingModel

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { id = "password-form", @class = "dialog-form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword)
        @Html.EditorFor(m => m.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword)
        @Html.EditorFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    @Html.AntiForgeryToken()
    <input class="btn btn-success" type="submit" value="Update password" />
}