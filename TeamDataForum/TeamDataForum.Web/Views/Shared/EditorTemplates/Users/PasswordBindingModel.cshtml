@using TeamDataForum.Web.Models.BindingModels.Users
@model PasswordBindingModel

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { id = "password-form", @class = "dialog-form" }))
{
    @Html.LabelFor(m => m.Password)
    @Html.EditorFor(m => m.Password)
    @Html.LabelFor(m => m.NewPassword)
    @Html.EditorFor(m => m.NewPassword)
    @Html.LabelFor(m => m.ConfirmPassword)
    @Html.EditorFor(m => m.ConfirmPassword)
    @Html.AntiForgeryToken()
    <input type="submit" value="Update password" />
}