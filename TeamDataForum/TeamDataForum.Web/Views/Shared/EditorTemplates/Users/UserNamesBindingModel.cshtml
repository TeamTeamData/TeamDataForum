@using TeamDataForum.Web.Models.BindingModels.Users
@model UserNamesBindingModel

@using (Html.BeginForm("ChangeInformation", "Account", FormMethod.Post, new { id = "user-data", @class = "dialog-form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Firstname)
        @Html.EditorFor(m => m.Firstname, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Lastname)
        @Html.EditorFor(m => m.Lastname, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    @Html.AntiForgeryToken()
    <input class="btn btn-success" type="submit" value="Update status" />
}