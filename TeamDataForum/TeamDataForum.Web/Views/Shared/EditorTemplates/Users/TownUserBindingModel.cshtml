@using TeamDataForum.Web.Models.BindingModels.Users
@model TownUserBindingModel

@using (Html.BeginForm("Town", "Account", FormMethod.Post, new { id = "user-town", @class = "dialog-form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Town)
        @Html.EditorFor(m => m.Town, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Country)
        @Html.EditorFor(m => m.Country, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    @Html.AntiForgeryToken()
    <input class="btn btn-success" type="submit" value="Update town" />
}