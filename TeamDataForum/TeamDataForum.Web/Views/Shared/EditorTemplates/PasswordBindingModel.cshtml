@using TeamDataForum.Web.Models.BindingModels.Users
@model PasswordBindingModel

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { id = "password-form" }))
{
    @Html.LabelFor(m => m.Password)
    @Html.EditorFor(m => m.Password)
    @Html.LabelFor(m => m.NewPassword)
    @Html.EditorFor(m => m.NewPassword)
    @Html.LabelFor(m => m.ConfirmPassword)
    @Html.EditorFor(m => m.ConfirmPassword)
    @Html.AntiForgeryToken()
    <input type="submit" value="Update password" />
}

<script>
    $('#password-form').submit(function () {
        var data = $(this).serialize();
        data = data.replace(/UserPassword./g, '');
        $.ajax({
            url: this.action,
            method: this.method,
            data: data,
            success: function(){
                alert('Success.');
            },
            error: function () {
                alert('Error.')
            }
        });
        return false;
    });
</script>